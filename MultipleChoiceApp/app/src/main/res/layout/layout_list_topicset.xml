<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="70sp"
        android:layout_height="100sp" />
    <LinearLayout
        android:layout_width="120sp"
        android:layout_height="100sp"
        android:orientation="vertical"
        android:layout_marginLeft="10sp">

        <TextView
            android:id="@+id/txtidTopicSet"
            android:layout_width="110sp"
            android:layout_height="40sp"
            android:layout_marginTop="10sp"
            android:text="Mã môn:" />

        <TextView
            android:id="@+id/txtnameTopicSet"
            android:layout_width="110sp"
            android:layout_height="40sp"
            android:text="Tên môn:" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="130sp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="10sp">

        <Button
            android:id="@+id/btnexamTopicSet"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:text="Thi"/>

        <Button
            android:id="@+id/btndetailTopicSet"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:text="Xem chi tiết"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/btnshareTopicSet"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_margin="25sp"
            android:background="#03F6F6F6"
            android:foreground="@drawable/baseline_share_24" />
    </LinearLayout>

</LinearLayout>