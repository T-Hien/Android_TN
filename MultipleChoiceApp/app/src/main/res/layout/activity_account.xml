<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:background="@drawable/background">

        <Button
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_marginLeft="350sp"
            android:gravity="center"
            android:foreground="@drawable/baseline_notifications_24"
            android:background="#00000000"
            android:id="@+id/btnShareAccount"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B4E3DDDD"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:background="#FFFFFF">
            <Button
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:background="#00000000"
                android:foreground="@drawable/baseline_account_circle_24"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:text="Nguyễn Thị Thu Hiền"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:id="@+id/txtNameUserAccount"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thông tin"
                    android:textSize="25sp"
                    android:background="#00FFFFFF"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:id="@+id/btnInformation"/>
            </LinearLayout>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:background="#FFFFFF"
            android:layout_marginTop="20sp">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hướng dẫn sử dụng"
                android:textSize="25sp"
                android:gravity="center"
                android:background="#00FFFFFF"
                android:textColor="#000"
                android:id="@+id/btnConductAccount"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:background="#FFFFFF"
            android:layout_marginTop="20sp">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đổi mật khẩu"
                android:textSize="25sp"
                android:background="#00FFFFFF"
                android:textColor="#000"
                android:id="@+id/btnChangePasswordAccount"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:background="#FFFFFF"
            android:layout_marginTop="20sp">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đăng xuất"
                android:textSize="25sp"
                android:background="#00FFFFFF"
                android:textColor="#000"
                android:id="@+id/btnLogOutAccount"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>