<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="@drawable/background">

        <Button
            android:layout_width="45sp"
            android:layout_height="40sp"
            android:layout_marginLeft="350sp"
            android:background="#00000000"
            android:layout_marginTop="5sp"
            android:foreground="@drawable/baseline_notifications_24"
            android:id="@+id/btnShareAccount"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_marginLeft="150sp"
            android:background="@drawable/baseline_account_circle_24"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:orientation="horizontal"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="10sp">
            <TextView
                android:layout_width="140sp"
                android:layout_height="100sp"
                android:text="Họ và tên: "
                android:textSize="25sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nguyễn Thị Thu Hiền"
                android:textSize="22sp"
                android:id="@+id/NameUser"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:orientation="horizontal"
            android:layout_marginLeft="10sp">
            <TextView
                android:layout_width="140sp"
                android:layout_height="100sp"
                android:text="Địa chỉ mail: "
                android:textSize="22sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="hien@gmail.com"
                android:textSize="20sp"
                android:id="@+id/MailUser"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:orientation="horizontal"
            android:layout_marginLeft="10sp">
            <TextView
                android:layout_width="140sp"
                android:layout_height="100sp"
                android:text="Số điện thoại:"
                android:textSize="22sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0456875345"
                android:textSize="22sp"
                android:id="@+id/PhoneUser"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="210sp">
            <Button
                android:layout_width="120sp"
                android:layout_height="60sp"
                android:text="Cập nhật"
                android:backgroundTint="#132271"
                android:id="@+id/UpdateAccount"/>
            <Button
                android:layout_width="120sp"
                android:layout_height="60sp"
                android:text="Thoát"
                android:layout_marginLeft="10sp"
                android:backgroundTint="#132271"
                android:id="@+id/ExitAccount"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>